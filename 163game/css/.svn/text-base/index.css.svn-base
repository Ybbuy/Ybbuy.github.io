*{
	margin: 0;
	padding: 0;
	font-family: "微软雅黑";
	font-weight: normal;
}
.kuan{
	width: 1260px;
	margin: 0 auto;
}
#header{
	width: 100%;
	height: 90px;
	background-color: rgba(255,255,255,.95);
	position: fixed;
	z-index: 999;
}
#header a{
	display: inline-block;
	line-height: 80px;
}
#header a img{
	vertical-align: middle;
}
#nav{
	float: right;
}
#nav li,#nav span{
	float: left;
	margin: 0 15px;
	list-style: none;
	font-size: 16px;
	line-height: 75px;
	color: #888;
	cursor: pointer;
}
#nav li:hover{
	color: #000;
}
#nav li i{
	height: 5px;
	width: 0;
	display: block;
	background-color: #cf0f32;
	margin: 0 auto;
}

.banner_main{
	position: relative;
}
#banner
{
	width:100%;
	height: 700px;
	margin:0px auto;
	overflow:hidden;
	z-index:-1;
}
#banner div{
	width: 100%;
	height: 700px;
	overflow: hidden;
	position: relative;
}
#banner div img{
	position: absolute;
	left: 50%;
	margin-left: -960px;
}
#btn
{	
	position:absolute;
	right: 20px;
	z-index:1;
	bottom: 10px;
}
#btn a
{
	color:#36f;
	font:700 11px "Arial";
	background:white;
	float:left;
	display: inline-block;
	border-radius: 50%;
	border: 3px solid white;
	box-sizing: border-box;
	margin: 0 20px;
	width:20px;
	height:20px;
	line-height:20px;
	text-align:center;
	text-decoration:none;
	margin-left:5px;
}
#btn a.activeSlide
{	
	color:#fff;
	background:#cf0f32;
	background-size: cover;
}
#btn a:hover
{	
	color:#fff;
	background:#cf0f32;
	background-size: cover;
	
}

#con-box{
	background-color: #282B2D;
	overflow: hidden;
}
#box-left{
	width: 150px;
	height: 230px;
	padding-top: 90px;
	float: left;
	z-index: 9;
}
.yxdt{
	font-size: 16px;
    color: #fff;
    font-weight: 700;
    text-align: center;
}
.month{
    font-size: 12px;
    color: #727272;
    text-align: center;
}
.day{
	font-size: 58px;
    line-height: 60px;
    color: #727272;
    text-align: center;
}
#box-left i{
    width: 22px;
    height: 5px;
    background: #cf1132;
    display: block;
    margin: 15px auto;
}
#small-btn{
	text-align: center;
	margin-top: 30px;
}
#small-btn a{
	display: inline-block;
	width: 10px;
	height: 10px;
	border-radius: 50%;
	border: 1px solid #727272;
	box-sizing: border-box;
	margin: 0 3px;
}
#small-btn a:hover{
	background-color: #727272;
	cursor: pointer;
}
#keng{
	overflow: hidden;
	position: relative;
	float: left;
	width: 640px;
	height: 320px;
	
}
#keng1,#keng2{
	width: 640px;
	position: absolute;
}
#keng2{left: 640px;}
.tu{
	display: block;
}
#tu1,#tu2,#tu3,#tu4{
	width: 320px;
	height: 320px;
	float: left;
	background: no-repeat;
	background-position: 30% 50%;
}
#tu1{
	background-image: url(../img/tu1.jpg);
}
#tu2{
	background-image: url(../img/tu2.jpg);
}
#tu3{
	background-image: url(../img/tu3.jpg);
}
#tu4{
	background-image: url(../img/tu4.jpg);
}
.tu-hei-touming{
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,.5);
    transition: all .3s linear;
	position: relative;
}
.p-1{
	position: absolute;
	top: 0;
	width: 320px;
    font-size: 20px;
    line-height: 35px;
    min-height: 50px;
    font-weight: 700;
    text-align: center;
    padding-top: 60px;
    padding-bottom: 30px;
    display: block;
    color: #fff;
    z-index: 1;
}
.p-2{
	position: absolute;
    font-size: 14px;
    line-height: 28px;
    text-align: center;
    width: 230px;
    left: 50%;
    margin-left: -115px;
    display: block;
    bottom: 100px;
    color: #c6c6c6;
    z-index: 1;
}
.jianbianhei{
	width: 100%;
	height: 120px;
	position: absolute;
	top: -120px;
	background: linear-gradient(to bottom, #000 0%,transparent 50%);
	
}
.hong{
	position: absolute;
	bottom: -120px;
	width: 100%;
	height: 120px;
	background-color: #cf1132;
	opacity: .9;
}

#box-right{
	width: 390px;
	height: 280px;
	padding: 40px 40px 0 40px;
	position: absolute;
	left: 790px;
	background-color: #282B2D;
	z-index: 9;
}
.title{
    font-size: 24px;
    line-height: 30px;
    color: #cf0f32;
    padding-bottom: 14px;
    border-bottom: 1px #3d4041 solid;
    display: block;
    font-weight: 700;
}
#box-right ul li{
	width: 350px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    float: left;
    color: #c3c3c3;
}
#box-right ul li a{
    color: #c3c3c3;
    font-size: 14px;
    text-indent: 15px;
    height: 30px;
    line-height: 30px;
}
#box-right>a{
	width: 37px;
	height: 37px;
	display: inline-block;
	background-image: url(../img/index_1_z_8fedf32.png);
	position: absolute;
	right: 0;
	top: 0;
}

#redian{
	overflow: hidden;
	height: 330px;
}
.redian1{
	width: 400px;
	height: 320px;
	position: relative;
	float: left;
	margin: 0 10px;
	box-shadow: 0 5px 10px #ccc;
}
.hot-title{
    color: #383838;
    font: 700 20px/32px "Microsoft YaHei";
    margin: 18px 0 0 20px;
    height: 32px;
    overflow: hidden;
}
.hot-txt {
    margin: 0 0 0 30px;
    font: 14px "Microsoft YaHei";
    color: #9f9f9f;
}
.zan{
    position: absolute;
    bottom: 20px;
    right: 127px;
    background: url(../img/zan.png) no-repeat;
    background-position: 0 0;
}
.zan:hover{
	 background-position: 0 -30px;
	 cursor: pointer;
}
.zan-main{
    color: #9f9f9f;
    font-size: 12px;
    display: block;
    height: 30px;
    line-height: 30px;
    padding-left: 30px;
}
.redian1>a{
	width: 400px;
	height: 176px;
	display: block;
	position: relative;
	overflow: hidden;
}
.redian1>a img{
	position: absolute;
	left: 0;
}

#footer{
	margin-top: 70px;	
}
.con-box {
	position: relative;
}
.link-li-box1 {
    width: 152px;
}
.link-li-box {
    position: relative;
    float: left;
    margin-right: 14px;
}
.link-li-box p {
    text-indent: 30px;
    font-size: 16px;
    line-height: 16px;
    margin-bottom: 20px;
    color: #888;
    background: url(../img/l-icon_01b84e0.png) 0 bottom no-repeat;
}
.link-li-box a {
    position: relative;
    float: left;
    width: 150px;
    padding: 10px 0;
    margin-right: 2px;
    margin-bottom: 2px;
    background: #e3e3e3;
    text-align: center;
    text-decoration: none;
}
.link-li-box a:hover {
    text-decoration: none;
    background: #cf1132;
}
.link-li-box a:hover .txt1,.link-li-box a:hover .txt2{
	color: white;
}
.link-li-box2 {
    width: 304px;
}
.link-li-box3 {
    width: 152px;
}
.link-li-box4 {
    width: 608px;
    margin-right: 0;
}
.link-li-box .txt1 {
    color: #222;
    font-size: 16px;
    line-height: 30px;
    text-align: center;
}
.link-li-box .txt2 {
    color: gray;
    font-size: 12px;
    line-height: 30px;
    text-align: center;
}
.con-wrap6-other {
    width: 100%;
    float: left;
    margin-top: 30px;
    font-size: 12px;
    color: #d9dde1;
}
.con-wrap6-other span {
    font-size: 14px;
    color: #454240;
}
.con-wrap6-other a {
    color: #888;
    font-size: 12px;
}
.f-cb:after, .f-cbli li:after {
    display: block;
    clear: both;
    visibility: hidden;
    height: 0;
    overflow: hidden;
    content: ".";
}
.con-wrap6-other .phone-tips {
    margin-left: 430px;
}
.con-wrap6-other .phone-num {
    font-size: 18px;
    color: #909090;
}
#NIE-copyRight {
    padding: 20px 0;
    background: #272a2c;
    min-width: 1260px;
    color: #fff;
    margin-top: 40px;
}
#NIE-copyRight #ncp-l1 a {
    color: #e23a3f;
}

#NIE-copyRight a:hover {
    text-decoration: underline;
}
#NIE-copyRight a {
    text-decoration: none;
}
#NIE-copyRight a {
    color: #fff;
}